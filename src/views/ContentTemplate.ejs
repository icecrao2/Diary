<meta http-equiv="Content-Type" content="text/html; charset=utf-8">


<html>
    <head>
      <%- include('./header.ejs') %>
	</head>
	
	<body>
			
		<div style ="width:99%">
			<table style = "width:60%; height:200px; margin:auto;text-align: center; border-collapse: collapse;">
				<th colspan="3">Diary</th>
				<tr><!-- 첫번째 줄 시작 -->
					<td style="float:left;" colspan ="3" style = "text-align: center;">
						제목 : <%=title%> &nbsp; &nbsp;
						날씨 : <%=weather%> &nbsp; &nbsp;
						감정 : <%=emotion%> &nbsp; &nbsp;
						Category : <%=category%> &nbsp; &nbsp;
					</td>
				</tr><!-- 첫번째 줄 끝 -->
				<tr>
					<td colspan = "3">
						<textarea id="content" cols="125" rows="30" style="text-align: left; font-weight: bold;"  readonly="readonly" disabled><%=content%></textarea>
					</td>
				</tr>
				<tr>
					<td></td>
					<td></td>
					<td></td>
				</tr>
			</table>
		</div>


		<footer>
		<%- include('./footer.ejs') %>
		</footer>
</html>

<script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
	
	$(document).ready(function(){

		$('#Write').click(function(){
			var emotion = $('#emotion option:selected').val();
			var weather = $('#weather option:selected').val();
			var category = $('#category option:selected').val();
			var title = $('#title').val();
			var content = $('#content').val();
			
			$.ajax({
				type: 'POST',
				url: "/Diary/writeDiary",
				data: {
					"emotion":emotion,
					"weather":weather,
					"category":category,
					"title":title,
					"content":content
				},
				success: function(){
					window.location.href='/Diary/1';
				}
			});
		});
	});

</script>